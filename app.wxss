/**app.wxss**/
page, view, image, text, navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
page {
  background-color: #f4f4f4;
}

 .banner {
    width: 690rpx;
    height: 300rpx;
    overflow: hidden;
    margin-top: 20rpx;
  }
  .banner .img {
    width: 100%;
    height: 300rpx;
  }
  /* 所有圆角的大小*/
  .radius {
    border-radius: 14rpx;
  }
  /*所有模块背景颜色 */
  .background {
    background-color: #fff;
  }
  /* 加载完的标识 */
  .line {
    width: 90%; /* 分隔线的长度 */
    margin: auto;
    height: 1px; /* 分隔线粗细 */
    text-align: center;
    font-size: 24rpx;
    color: #ccc;
    background: #ccc;
    margin-top: 60rpx;
    margin-bottom: 22px;
  }
  .line span {
    position: relative;
    top: -8px;
    background: #f4f4f4;
    padding: 0px 10px;
  }
  