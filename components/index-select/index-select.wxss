/* components/index-select/index-select.wxss */
.select-box {
  position: relative;
  /* width: 200rpx; */
  font-size: 30rpx;
}

.select-current {
  position: relative;
  width: 160rpx;
   padding: 0 20rpx; 
  line-height: 70rpx;
  /* border: 1rpx solid #ddd; */
  border-radius: 6rpx;
  box-sizing: border-box;
}

.select-current::after {
  position: absolute;
  display: block;
  right: 16rpx;
  top: 30rpx;
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #999;
}

.current-name {
  display: block;
  width: 200rpx;
  height: 100%;
  word-wrap: normal;
  overflow: hidden;
}

.option-list {
  position: absolute;
  left: 30rpx;
  top: 5rpx;
  width: 140rpx;
  padding: 12rpx 10rpx 10rpx 10rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  z-index: 99;
  text-align: center;
  box-shadow: 0rpx 0rpx 1rpx 1rpx rgba(0, 0, 0, 0.5) inset;
  background-color: #fff;
}

.option {
  display: block;
  width: 115rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #eee;
}

.option:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
