<!--components/tablist/tablist.wxml-->
<view class="tabs">
    <view class="tabs_title">
        <view wx:for="{{tablist}}" wx:key="id"
         class="tabs_item {{item.isActive?'active':''}}"
         bindtap="hanldeItemTap" data-index="{{index}}">
            {{item.name}}
        </view>
    </view>
    <view class="tabs_content">
        <slot></slot>
    </view>
</view>
