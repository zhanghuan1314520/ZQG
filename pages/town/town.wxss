@import "../../style/common_ label.wxss";

.container {
  background: #f4f4f4;
  width: 690rpx;
  height: 100%;
  margin: 30rpx;
}

.banner {
  margin-top: 30rpx;
  height: 300rpx;
  border-radius: 14rpx;
  overflow: hidden;
}

.banner .img {
  width: 690rpx;
  height: 300rpx;
}

.cate-item {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.cate-item .item {
  width: 690rpx;
  height: 470rpx;
  margin: 10rpx 0;
  border-radius: 14rpx;
  overflow: hidden;
  background-color: #fff;
}

.cate-item .item .img {
  width: 690rpx;
  height: 300rpx;
}

.town-footer {
  width: 690rpx;
  height: 170rpx;
  display: flex;
  flex-direction: row;
}

.town-one {
  width: 150rpx;
  height: 150rpx;
  line-height: 40rpx;
  margin: 0 auto;
  font-size: 30rpx;
  color: #000;
  font-weight: bolder;
  border-right: 1px solid #aaa;
}

.town-one .title {
  display: block;
  width: 145rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  align-items: center;
  flex-wrap: nowrap;
}

.town-two {
  width: 460rpx;
  height: 150rpx;
  color: #666;
  margin: 0 auto;
  font-size: 25rpx;
  line-height: 31rpx;
  overflow: hidden;
  display: -webkit-box;
  text-indent: 5rpx;
  text-align: justify;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
}

/* 分隔线--底部 */

.line {
  width: 90%; /* 分隔线的长度 */
  margin: auto;
  height: 1px; /* 分隔线粗细 */
  text-align: center;
  font-size: 24rpx;
  color: #aaa;
  background: #ccc;
  margin-top: 60rpx;
  margin-bottom: 22px;
}

.line span {
  position: relative;
  top: -8px;
  background: #fff;
  padding: 0px 10px;
}

