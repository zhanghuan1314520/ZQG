.txt {
  color: #000;
}

/* 下拉组件样式 */

.select-wrap {
  width: 100%;
  height: 110rpx;
  background-color: #f55335;
}

.select-box {
  position: relative;
  width: 690rpx;
  margin: 0 30rpx;
  color: #fff;
}

.select-current {
  position: relative;
  display: flex;
  box-sizing: border-box;
  line-height: 110rpx;
}

.openMore {
  display: inline-block;
  position: absolute;
  right: 5rpx;
  width: 70rpx;
  height: 100%;
}

.arrow-down {
  position: absolute;
  display: inline-block;
  right: 16rpx;
  top: 30rpx;
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #999;
}

.current-name {
  display: block;
  word-wrap: normal;
  overflow: hidden;
  font-size: 30rpx;
}

.currnt-town {
  width: 400rpx;
  margin: 0 70rpx;
}

.currnt-town .town {
  display: inline-block;
  font-size: 30rpx;
}

.option-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  height: auto;
  width: 690rpx;
  box-sizing: border-box;
  background-color: #F4F5F7;
  opacity: 0.6;
  z-index: 888;
}

.option {
  display: block;
  height: 30rpx;
  width: 14.28%;
  text-align: center;
  margin: 20rpx 0;
}

.option:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.tp {
  width: 44rpx;
  height: 110rpx;
  margin-left: 16rpx;
}

.imgurl {
  width: 44rpx;
  height: 30rpx;
}

