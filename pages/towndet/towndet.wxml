  <view class='nav'>
    <block wx:for="{{nav}}" wx:key="key">
      <view class="{{ curIndex === item.id ? 'txt' : ''}}" data-id="{{item.id}}" bindtap="navTap">
        <view class="nav-item">
          <view class="nav-top">
            <image class="img" src="{{item.imgurl}}"/>
          </view>
          <view class="nav-button">{{item.title}}</view>
        </view>
      </view>
    </block>
  </view>

