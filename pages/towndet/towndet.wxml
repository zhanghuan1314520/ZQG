<view class="select-wrap">
  <view class="select-box">
    <view class="select-current">
      <view class="current-name">{{parentData.name}}</view>
      <view class="currnt-town">
        <block wx:for="{{villageData}}" wx:for-index="i" wx:key="id" data-id="{{item.id}}" data-name="{{item.name}}">
          <text class="town" catchtap="isShowMore" wx:if="{{i<3}}">{{item.name}}</text>
        </block>
      </view>
      <view wx:if="{{villageData.length>3}}" class="openMore" catchtap="isShowMore">
        <text class="arrow-down"></text>
      </view>
      <view class="tp">
        <image class="imgurl" src="../../images/icon/ck.png"></image>
      </view>
    </view>

    <view class="option-list" wx:if="{{isShow}}">
      <text catchtap="change" class="option" wx:for="{{villageData}}" wx:key="id" data-id="{{item.id}}" data-name="{{item.name}}">{{item.name}}
          </text>
    </view>
  </view>
</view>

