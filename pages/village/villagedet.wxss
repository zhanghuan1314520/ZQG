/* 下拉组件样式 */

.select-box {
  position: relative;
  width: 100%;
  font-size: 30rpx;
}

.select-current {
  position: relative;
  padding: 0 20rpx;
  line-height: 70rpx;
  display: flex;
  border-radius: 15rpx;
  box-sizing: border-box;
  background: #fff;
}

.openMore {
  display: inline-block;
  position: absolute;
  right: 5rpx;
  width: 70rpx;
  height: 100%;
}

.arrow-down {
  position: absolute;
  display: inline-block;
  right: 16rpx;
  top: 30rpx;
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #999;
}

.current-name {
  display: block;
  height: 70rpx;
  word-wrap: normal;
  overflow: hidden;
  font-weight: bolder;
}

.currnt-town {
  margin-left: 20rpx;
  width: 500rpx;
}

.currnt-town .town {
  color: #97999a;
  /* padding-left: 30rpx; */
  display: inline-block;
  width: 33%;
  text-align: center;
}

.option-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  top: 15rpx;
  height: auto;
  width: 690rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 1rpx 1rpx rgba(255, 250, 250, 0.8) inset;
  background-color: rgba(255, 255, 255, 0.5);
}

.option {
  display: block;
  height: 30rpx;
  width: 16.66%;
  text-align: center;
  margin: 20rpx 0;
}

.option:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
