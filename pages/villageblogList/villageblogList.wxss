@import "../../app.wxss";

page {
  background: #f4f4f4;
  width: 690rpx;
  height: 100%;
  margin: 30rpx;
}

.brand-info .name {
  width: 100%;
  height: 278rpx;
  position: relative;
}

.brand-info .img {
  position: absolute;
  top: 0;
  left: 0;
  width: 690rpx;
  height: 300rpx;
  border-radius: 20rpx;
}

.brand-info .info-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 278rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.brand-info {
  width: 690rpx;
  height: 300rpx;
  border: 1px solid #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.brand-info .txt {
  display: block;
  height: 40rpx;
  font-size: 37.5rpx;
  color: #fff;
}

.brand-info .line {
  margin: 0 auto;
  margin-top: 16rpx;
  display: block;
  height: 2rpx;
  width: 145rpx;
  background: #fff;
}

.sort {
  position: relative;
  width: 690rpx;
  height: 50rpx;
  margin-top: 20rpx;
}

.sort-box {
  width: 690rpx;
  height:50rpx;
  display: flex;
  flex-wrap: wrap;
}

.sort-box .item1 {
  width: 100rpx;
  height: 50rpx;
  line-height: 46rpx;
  text-align: center;
  /* flex: 1; */
  font-size: 30rpx;
  border: 1px solid;
  border-radius: 40rpx;
  margin-left: 20rpx;
}

.sort-box .item2 {
  width: 100rpx;
  height: 50rpx;
  line-height: 46rpx;
  text-align: center;
  /* flex: 1; */
  color: #333;
  font-size: 30rpx;
  border: 1px solid;
  border-radius: 40rpx;
  margin-left: 200rpx;
}

.sort-box .item .txt {
  color: #333;
}

.sort-box .item.active .txt {
  color: #b4282d;
}

.sort-box .item .van-icon {
  margin-left: 6rpx;
}

.sort-box-category {
  background: #fff;
  width: 690rpx;
  height: auto;
  overflow: hidden;
  padding: 40rpx 40rpx 0 0;
  background-color:rgba(255,255,255, 0.8);
  border-radius: 15rpx;
  margin-top: 20rpx;
}

.sort-box-category .item-one {
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  float: left;
  padding: 0 16rpx;
  margin: 0 0 40rpx 40rpx;
  border: 1px solid #666;
  font-size: 24rpx;
  border-radius: 15rpx;
}

.sort-box-category .item.active {
  color: #b4282d;
  border: 1px solid #b4282d;
}

.cate-item .b {
  width: 690rpx;
  height: auto;
}

.cate-item .b .item {
  background: #fff;
  width: 690rpx;
  height: auto;
 overflow: hidden;
  margin-top: 20rpx;
  border: 1px solid #fff;
  border-radius: 20rpx;
}

.cate-item .b .item-b {
  border-right: 1rpx solid #f4f4f4;
}

.cate-item .item .img {
  width: 690rpx;
  height: 350rpx;
}

.cate-item .item .name {
  display: block;
  width: 645rpx;
  height: auto;
  /* 缩进 */
  text-indent: 55rpx;
  text-align: justify;
  /* font-weight: bold; */
  line-height: 35rpx;
   margin-left: 20rpx;
    margin-right: 20rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.cate-item .item .price {
  position: relative;
  display: block;
  width: 690rpx;
  height: 50rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

/*  */

.cate-footer {
  width: 690rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  padding-bottom: 20rpx;
}

.cate-item .name-one {
  width: 690rpx;
 height: 60;
 line-height: 30rpx;
  padding: 0 20rpx;
  color: #000;
  font-weight: bolder;
  display: flex;
  flex-wrap: nowrap;
  text-align: justify;
}

.cate-item .name-two {
  width: 690rpx;
  height: auto;
line-height: 30rpx;
  padding: 0 20rpx;
  font-size: 25rpx;
  color: #666;
  font-weight: bold;
   margin-top: 10rpx;
  overflow: hidden;
  text-align: justify;
  text-indent: 55rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 搜索框 */

.search {
  height: 56rpx;
  width: 690rpx;
  display: flex;
  align-items: center;
}

.search .van-icon-search {
  line-height: 59rpx;
}

.search .input {
  width: 520rpx;
  height: 56rpx;
  background: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border: 1px solid #848484;
}


.photography {
  width: 115rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  margin-left: 30rpx;
  font-weight: bold;
  color: #000;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 25rpx;
}


