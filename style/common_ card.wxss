.content-nav {
  display: flex;
  flex-direction: row;
  width: 690rpx;
  height: 243rpx;
  margin-top: 20rpx;
  background: #fff;
  border: 1px solid #fff;
  border-radius: 14rpx;
  flex-wrap: wrap;
}

/* 左边 */

.content-left {
  width: 367rpx;
  height: 164rpx;
  margin: 40rpx 20rpx 40rpx 30rpx;
}

.content-title-left {
  width: 366rpx;
  height: 110rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
  line-height: 36rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  justify-content: space-between;
}

.content-time {
  width: 366rpx;
  height: 30rpx;
  font-size: 24rpx;
  margin-top: 22rpx;
  flex-wrap: nowrap;
  overflow: hidden;
  font-family: Lantinghei SC;
  font-weight: 200;
  color: #999;
}

/* 右边 */

.contetn-right {
  width: 220rpx;
  height: 164rpx;
  overflow: hidden;
  border-radius: 14rpx;
  margin: 40rpx 30rpx 40rpx 20rpx;
}
.content-img {
  width: 220rpx;
  height: 164rpx;
}