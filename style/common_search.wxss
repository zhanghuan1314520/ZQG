.header {
    width: 100%;
    height: 125rpx;
    background: #f55335;
    text-align: center;
    line-height: 50rpx;
  }
  .location {
    width: 200rpx;
    height: 56rpx;
    margin-left: 60rpx;
  }
  .search {
    height: 56rpx;
    width: 690rpx;
    display: flex;
    align-items: center;
  }
  .search .van-icon-search {
    line-height: 59rpx;
  }
  .search .input {
    width: 540rpx;
    height: 56rpx;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
  }

  .search .txt {
    height: 42rpx;
    line-height: 42rpx;
    color: #666;
    padding-left: 10rpx;
    font-size: 25rpx;
  }